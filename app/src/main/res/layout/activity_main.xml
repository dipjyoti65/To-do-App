<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewCategories"
            android:layout_width="@dimen/_285sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categoryPersonal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal"
                    android:padding="16sp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/categoryWork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:padding="16dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"/>

                <!-- Add more category views as needed -->
            </LinearLayout>


        </HorizontalScrollView>

        <ImageView
            android:id="@+id/imageViewThreeDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:src="@drawable/baseline_more_vert_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/listviewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_below="@+id/topBar"
        android:orientation="vertical">

          <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"

            >
          </ListView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/listviewContainer"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        />


</RelativeLayout>
