<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomsheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialogbkg">

    <EditText
        android:id="@+id/enterTask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/textviewshapebg"
        android:gravity="center_vertical"
        android:hint="Input new task here"
        android:padding="@dimen/_15sdp"
        android:textSize="@dimen/_15ssp" />

    <Button
        android:id="@+id/showList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="No list"
        android:layout_gravity="start"
        android:backgroundTint="@color/shark"
        app:cornerRadius="@dimen/_5sdp"
        android:layout_below="@+id/enterTask"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/shark"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="Save"
        android:layout_gravity="end"
        app:cornerRadius="@dimen/_5sdp"
        android:layout_below="@+id/enterTask"
        android:layout_alignParentEnd="true"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal"
       >

    </LinearLayout>



</RelativeLayout>